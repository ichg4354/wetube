mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.fileUrl id='jsVideoPlayerPreview')
        .videoPlayer__controls
            .videoPlayer__column
                span#volumeUpBtn   
                    i.fas.fa-volume-up
                span
                    | 00:00 / 10:00
            .videoPlayer__column
                span#playBtn
                    i.fas.fa-play
            .videoPlayer__column
                span#expandBtn
                    i.fas.fa-expand