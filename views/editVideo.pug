extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text" placeholder='Title' name='title' required value=video.title)
            textarea(name="description", placeholder='description' required)=video.description
            input(type='submit' value="Update Video")
        a(href=routes.delVideo(video.id)) Delete Video